<script>
    function setPublicApplyCompletionPage(pageIndex){
        var data = {
            siteId : "$!{context.siteId}",
            //organId: "$!{context.columnId}",
            pageSize: "$!{paramObj.pageSize}",
            pageIndex: pageIndex
        };
        var fromData = $("#publicApplyCompletionQueryForm").serializeObject();

        data.title = fromData.searchWords;

        data.organId = fromData.organId;//单位id
        if(fromData.startDate != ""){
            data.startDate = fromData.startDate;
        }
        if(fromData.endDate != ""){
            data.endDate = fromData.endDate;
        }
        Ls.ajax({
            url: "/public/applyCompletionQuery",
            data: data
        }).done(function(d) {
            if (d.status == 1) {
                var pageCount = d.data.pageCount;
                var pageIndex = d.data.pageIndex;
                if (pageCount == 0) {
                    $("#public_apply_completion_query_result").html("");
                    $("#public_apply_completion_pageination").html("");
                } else {
                    var content = Ls.template("public_apply_completion_query_tpl", d.data);
                    $("#public_apply_completion_query_result").html(content);
                    if (pageCount > 1) {
                        $("#public_apply_completion_pageination").show();
                        setCompletionPagination(pageIndex, pageCount);
                    }
                }
            } else {
                Ls.tipsErr(d.desc);
            }
        });
    }

    function setCompletionPagination(pageIndex, pageCount){
        Ls.pagination("#public_apply_completion_pageination", function (pageIndex) {
            setPublicApplyCompletionPage(pageIndex-1);
        }, {
            currPage: (pageIndex+1),
            pageCount : pageCount,
            param: "pageSize=$!{paramObj.pageSize}"
        });
    }

    function queryCompletionByCondition(){
        setPublicApplyCompletionPage(0);
        return false;
    }
    $(document).ready(function(){
        //查询
        setPublicApplyCompletionPage(0);
    });
</script>