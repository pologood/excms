</div>
</div>
<script type="text/javascript">

    mini.parse();
    var chartsData = [];
    var chartsUnit = [];
    var chartsTime = 'today';

    $(document).ready(function () {
        mini.parse();
        grid = mini.get("datagrid1");
        grid.load({typeCode: 'videoNews'});

        Ls.parseEcharts(function () {
            doChange();
        })
    })

    var get_todoNumber = function () {
        Ls.ajaxGet({
            url: "/statistics/getCount/",
            data: {typeCode: 'videoNews'}
        }).done(function (d) {
            var d = d.data;
            for (var i = 0, l = d.length; i < l; i++) {
                $("#count_" + d[i].chartsTime).text(d[i].count);
            }
        });
    }()

    function doChange() {
        // 使用
        require([
                    'echarts',
                    'echarts/chart/line',
                    'echarts/chart/bar',
                    'echarts/chart/pie'
                ], function (ec) {
                    Ls.ajaxGet({
                        url: "/statistics/getChartsList/",
                        data: {chartsTime: chartsTime, typeCode: 'videoNews', type: 'word'}
                    }).done(function (d) {
                        var d = d.data;
                        chartsData = [];
                        chartsUnit = [];
                        if (d != null && d.length > 0) {
                            for (var i = 0, l = d.length; i < l; i++) {
                                chartsData[i] = d[i].count;
                                chartsUnit[i] = d[i].organName;
                            }
                        }

                        option_a = {
                            grid: {
                                x: 50,
                                x2: 20,
                                y: 50
                            },
                            title: {
                                text: '',
                                subtext: ''
                            },
                            tooltip: {
                                trigger: 'item'
                            },
                            legend: {
                                show: false,
                                data: ['发文数量']
                            },
                            toolbox: {
                                show: true,
                                feature: {
                                    magicType: {show: true, type: ['line', 'bar']},
                                    restore: {show: true},
                                    saveAsImage: {show: true}
                                }
                            },
                            calculable: true,
                            xAxis: [
                                {
                                    type: 'category',
                                    axisLabel: {
                                        interval: 0
                                    },
                                    data: chartsUnit
                                }
                            ],
                            yAxis: [
                                {
                                    type: 'value'
                                }
                            ],
                            series: [
                                {
                                    name: '发文数量',
                                    type: 'bar',
                                    color: '1bb2d8',
                                    itemStyle: {
                                        normal: {
                                            label: {
                                                show: true,
                                                position: 'top',
                                                color: '#88b0bb'
                                            }
                                        }
                                    },
                                    data: chartsData

                                }
                            ],
                            color: [
                                '#FF8C00', '#1bb2d8', '#99d2dd', '#88b0bb', '#88b0bb',
                                '#1c7099', '#038cc4', '#75abd0', '#afd6dd', '#88b0bb'
                            ]
                        };

                        var chart_a = ec.init(document.getElementById('statistics_a'));
                        chart_a.setOption(option_a);

                    });

                }
        );
    }

    function changeCharts(time) {
        chartsTime = time;
        doChange();
    }

    function searchList() {
        var organName = $("#organName").val();
        var startDate = $("#startDate").val();
        var endDate = $("#endDate").val();
        grid = mini.get("datagrid1");
        grid.load({typeCode: 'videoNews', organName: organName, startDate: startDate, endDate: endDate});
    }

    function searchClear() {
        $("#organName").val('');
        $("#startDate").val('');
        $("#endDate").val('');
        grid = mini.get("datagrid1");
        grid.load({typeCode: 'videoNews'});
    }

    function exportList() {
        var organName = $("#organName").val() == null ? '' : $("#organName").val();
        var startDate = $("#startDate").val() == null ? '' : $("#startDate").val();
        var endDate = $("#endDate").val() == null ? '' : $("#endDate").val();

        var params = "startDate=" + startDate + "&endDate=" + endDate + "&organName=" + organName + "&typeCode=videoNews";
        $('#download_frame').attr("src", "/statistics/exportWordList?" + params);
    }


</script>