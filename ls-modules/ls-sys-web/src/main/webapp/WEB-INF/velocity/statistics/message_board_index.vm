                            <div id="statistics_a" style="height: 365px;">

                            </div>
                        </div>
                    </div>
                    <!-- END PORTLET-->
                </div>
                <div class="col-md-6 col-sm-6">
                    <!-- BEGIN PORTLET-->
                    <div class="portlet light bordered mb25">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="icon-bar-chart font-blue"></i>
                                <span class="caption-subject font-blue bold">各单位留言满意率排行TOP 10</span>
                                <span class="caption-helper"></span>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div id="statistics_b" style="height: 365px;">

                            </div>
                        </div>
                    </div>
                    <!-- END PORTLET-->
                </div>
            </div>


        </div>
    </div>
</div>
<script type="text/javascript">

    mini.parse();
    var chartsData = [];
    var chartsUnit = [];
    var chartsTime = 'today';
    var typeData = [];
    var typeName = [];

    $(document).ready(function () {
        mini.parse();
        grid = mini.get("datagrid1");
        grid.load({typeCode: 'messageBoard'});

        Ls.parseEcharts(function () {
            doChange();
        })
    })

    function doChange() {
        // 使用
        require([
                    'echarts',
                    'echarts/chart/line',
                    'echarts/chart/bar',
                    'echarts/chart/pie'
                ], function (ec) {
                    Ls.ajaxGet({
                        url: "/statistics/getChartsList/",
                        data: {chartsTime: chartsTime, typeCode: 'messageBoard', type: 'word'}
                    }).done(function (d) {
                        var d = d.data;
                        chartsData = [];
                        chartsUnit = [];
                        if (d != null && d.length > 0) {
                            for (var i = 0, l = d.length; i < l; i++) {
                                chartsData[i] = d[i].rate;
                                chartsUnit[i] = d[i].organName;
                            }
                        }

                        option_a = {
                            grid: {
                                x: 50,
                                x2: 20,
                                y: 50
                            },
                            title: {
                                text: '',
                                subtext: ''
                            },
                            tooltip: {
                                trigger: 'item',
                                formatter: "{a} <br/>{b} : {c} ({d}%)"
                            },
                            legend: {
                                show: false,
                                data: ['回复率']
                            },
                            toolbox: {
                                show: true,
                                feature: {
                                    magicType: {show: true, type: ['line', 'bar']},
                                    restore: {show: true},
                                    saveAsImage: {show: true}
                                }
                            },
                            calculable: true,
                            xAxis: [
                                {
                                    type: 'category',
                                    axisLabel: {
                                        interval: 0
                                    },
                                    data: chartsUnit
                                }
                            ],
                            yAxis: [
                                {
                                    type: 'value',
                                    axisLabel: {
                                        formatter: '{value} %'
                                    }
                                }
                            ],
                            series: [
                                {
                                    name: '回复率',
                                    type: 'line',
                                    color: '1bb2d8',
                                    itemStyle: {
                                        normal: {
                                            label: {
                                                show: true,
                                                position: 'top',
                                                color: '#88b0bb'
                                            }
                                        }
                                    },
                                    data: chartsData

                                }
                            ],
                            color: [
                                '#FF8C00', '#1bb2d8', '#99d2dd', '#88b0bb', '#88b0bb',
                                '#1c7099', '#038cc4', '#75abd0', '#afd6dd', '#88b0bb'
                            ]
                        };

                        var chart_a = ec.init(document.getElementById('statistics_a'));
                        chart_a.setOption(option_a);

                    });

                    Ls.ajaxGet({
                        url: "/statistics/getChartsList/",
                        data: {chartsTime: chartsTime, type: 'satisfactory'}
                    }).done(function (d) {
                        var d = d.data;
                        chartsData = [];
                        chartsUnit = [];
                        if (d != null && d.length > 0) {
                            for (var i = 0, l = d.length; i < l; i++) {
                                chartsData[i] = d[i].rate;
                                chartsUnit[i] = d[i].organName;
                            }
                        }
                        option_b = {
                            grid: {
                                x: 50,
                                x2: 20,
                                y: 50
                            },
                            title: {
                                text: '',
                                subtext: ''
                            },
                            tooltip: {
                                trigger: 'item',
                                formatter: "{a} <br/>{b} : {c} ({d}%)"
                            },
                            legend: {
                                show: false,
                                data: ['满意率']
                            },
                            toolbox: {
                                show: true,
                                feature: {
                                    magicType: {show: true, type: ['line', 'bar']},
                                    restore: {show: true},
                                    saveAsImage: {show: true}
                                }
                            },
                            calculable: true,
                            xAxis: [
                                {
                                    type: 'category',
                                    axisLabel: {
                                        interval: 0
                                    },
                                    data: chartsUnit
                                }
                            ],
                            yAxis: [
                                {
                                    type: 'value',
                                    axisLabel: {
                                        formatter: '{value} %'
                                    }
                                }
                            ],
                            series: [
                                {
                                    name: '满意率',
                                    type: 'line',
                                    color: '1bb2d8',
                                    itemStyle: {
                                        normal: {
                                            label: {
                                                show: true,
                                                position: 'top',
                                                color: '#88b0bb'
                                            }
                                        }
                                    },
                                    data: chartsData

                                }
                            ],
                            color: [
                                '#FF8C00', '#1bb2d8', '#99d2dd', '#88b0bb', '#88b0bb',
                                '#1c7099', '#038cc4', '#75abd0', '#afd6dd', '#88b0bb'
                            ]
                        };

                        var chart_b = ec.init(document.getElementById('statistics_b'));
                        chart_b.setOption(option_b);

                    });
                }
        );
    }

    var get_todoNumber = function () {
        Ls.ajaxGet({
            url: "/statistics/getCount/",
            data: {typeCode: 'messageBoard'}
        }).done(function (d) {
            var d = d.data;
            for (var i = 0, l = d.length; i < l; i++) {
                $("#count_" + d[i].chartsTime).text(d[i].count);
            }
        });
    }()

    function changeCharts(time) {
        chartsTime = time;
        doChange();
    }

    function searchList() {
        var organName = $("#organName").val();
        var startDate = $("#startDate").val();
        var endDate = $("#endDate").val();
        grid = mini.get("datagrid1");
        grid.load({typeCode: 'messageBoard', organName: organName, startDate: startDate, endDate: endDate});
    }

    function searchClear() {
        $("#organName").val('');
        $("#startDate").val('');
        $("#endDate").val('');
        grid = mini.get("datagrid1");
        grid.load({typeCode: 'messageBoard'});
    }

    function exportList() {
        var organName = $("#organName").val() == null ? '' : $("#organName").val();
        var startDate = $("#startDate").val() == null ? '' : $("#startDate").val();
        var endDate = $("#endDate").val() == null ? '' : $("#endDate").val();

        var params = "startDate=" + startDate + "&endDate=" + endDate + "&organName=" + organName + "&typeCode=messageBoard";
        $('#download_frame').attr("src", "/statistics/exportMessageBoardList?" + params);
    }

</script>