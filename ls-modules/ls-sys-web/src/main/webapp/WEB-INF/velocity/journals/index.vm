<script type="text/javascript">
    mini.parse();

    cmm = {
        dataFlag: 1,
        siteId: GLOBAL_SITEID,
        columnId: content_mgr.indicatorId

    }
    var grid = mini.get("datagrid1");
    grid.load(cmm);

    //重置 datagrid 高度
    Ls.mini_datagrid_height(grid);


    $(document).ready(function () {
//        $("#butonDel").hide();

    })



    //操作加载
    function renderOp(e) {
        var rec = e.record;
        var edit='<button  class=" btn btn-default btn-sm btn-edit" onclick="addMateria(' + rec.id + ')">编辑</button> ';
        return edit;
    }


    function  addMateria(id){
        Ls.openWin("/journal/editPage?id="+id+"&columnId="+cmm.columnId, {
            width: '800px',
            height: '400px',
            lock: true,
            title: '编辑',
        });



    }





    function search() {
        var name = $("#searchKey").val();
        var createDate = $("#createDate").val();
        grid.load({keyWord: name, dataFlag: 1,create:createDate,columnId:cmm.columnId});
    }

    //清除条件
    searchClear = function () {
        $("#searchKey").val("")
        $("#createDate").val("")
        grid.load({dataFlag: 1,'siteId':cmm.siteId,columnId:cmm.columnId});
    }
    function onKeyEnter(e) {
        search();
    }

    function userGroup() {
        Ls.openWin("/weChat/userMgr/userGroup", {
            width: '650px',
            height: '450px',
            lock: true,
            title: '用户组管理',
        });
    }

    function batchDel(){
        var ids=getIDS();
        if(ids==''||ids.length<=0){
            Ls.tipsInfo("请选择待删除项");
            return;
        }

        Ls.ajax({
            type: "POST",
            data: {'ids':ids},
            url: "/weChatDeal/delMag",
            success: function (text) {
                Ls.tips

                Ls.tipsOk("删除成功",{
                    callback: function () {
                        Ls.getWin.win.grid.reload();
                        Ls.winClose();
                    }
                });
            }
        })



    }

    function batchPublish(){
        var ids = getIDS();
        var contentIds=getPublishIDS();
        if(ids==''||ids.length<=0){
            Ls.tipsInfo("请选择待发布项");
            return;
        }

        Ls.ajax({
            type: "POST",
            data: {'ids':ids,'contentIds':contentIds},
            url: "/journal/batchPublish",
            success: function (text) {
                if (text.status==0) {
                    Ls.tipsErr(text.desc);
                    return;
                }
                Ls.tipsOk("发布成功",{
                    callback: function () {
                        Ls.getWin.win.grid.reload();
                    }
                });

            }
        })


    }


    function getIDS() {
        var rows = grid.getSelecteds();
        var ids = [];
        for (i = 0; i < rows.length; i++) {
            ids.push(rows[i].id);
        }
        ids = ids.join(",");
        return ids;
    }

    function getPublishIDS() {
        var rows = grid.getSelecteds();
        var ids = [];
        for (i = 0; i < rows.length; i++) {
            ids.push(rows[i].baseContentId);
        }
        ids = ids.join(",");
        return ids;
    }

    function batchCancelPublish(){
        var ids=getPublishIDS();
        if(ids==''||ids.length<=0){
            Ls.tipsInfo("请选择待取消发布项");
            return;
        }

        Ls.ajax({
            type: "POST",
            data: {'ids':ids},
            url: "/journal/batchCancelPublish",
            success: function (text) {
                Ls.tipsOk("取消发布成功",{
                    callback: function () {
                        Ls.getWin.win.grid.reload();
                    }
                });
            }
        })



    }




    function guide_publish(obj) {
        var record = obj.record;
        var diyDom = '<a id=' + record.id + ' onclick="publish('+record.id+','+record.baseContentId+')"><img src="$!{rc.contextPath}assets/images/noclick.gif" border="0" title="发布" ></a>';
        if (record.isPublish == 1) {
            diyDom = '<a id=' + record.id + ' onclick="cancel_publish('+record.baseContentId+')"><img src="$!{rc.contextPath}assets/images/click.gif" border="0" title="取消发布" ></a>';
        }

        return diyDom;
    }

