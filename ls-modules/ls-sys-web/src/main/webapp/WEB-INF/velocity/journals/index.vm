    function publish(id,contentId){


        Ls.ajax({
            type: "POST",
            data: {'ids':id,'contentIds':contentId},
            url: "/journal/batchPublish",
            success: function (text) {
                if(text.status==0){
                    Ls.tipsErr(text.desc);
                    return;
                }

                Ls.tipsOk("发布成功",{
                    callback: function () {
                        Ls.getWin.win.grid.reload();
                    }
                });
            }
        })


    }

    function cancel_publish(id){
        Ls.ajax({
            type: "POST",
            data: {'ids':id},
            url: "/journal/batchCancelPublish",
            success: function (text) {
                Ls.tipsOk("取消发布成功",{
                    callback: function () {
                        Ls.getWin.win.grid.reload();
                    }
                });
            }
        })


    }

    function  batchDel(){
        var ids = getIDS();
        var  contentIds = getPublishIDS();
        Ls.ajax({
            type: "POST",
            data: {'ids':ids,'contentIds':contentIds},
            url: "/journal/batchDel",
            success: function (text) {
                Ls.tipsOk("删除成功",{
                    callback: function () {
                        Ls.getWin.win.grid.reload();
                    }
                });
            }
        })

    }



